package pages

import "github.com/a-h/templ"

templ LoginPage() {
	Base(nil, "Login", loginContent())
}

templ loginContent() {
	<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
		<h1 class="text-2xl font-bold mb-4">Sign in with Nostr</h1>
		<button data-on-click="@post('/api/auth/challenge')" class="w-full bg-blue-600 text-white py-2 rounded">Sign in with NIP-07</button>
	</div>
}
