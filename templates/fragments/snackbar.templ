package fragments

// Snackbar renders a simple out-of-band toast appended to #toast-container.
templ Snackbar(msg string, severity string) {
	<div hx-swap-oob="beforeend:#toast-container" class="inline-block">
		if severity == "error" {
			<div data-remove-after="5000" class="p-3 rounded shadow text-sm bg-red-100 text-red-800">{ msg }</div>
		} else {
			<div data-remove-after="5000" class="p-3 rounded shadow text-sm bg-green-100 text-green-800">{ msg }</div>
		}
	</div>
}
